<h1> Helpmate Login Page </h1>


<h1> Listing Forms.. </h1>


<h1>Pforms</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Mi</th>
      <th>Lname</th>
      <th>Coursemajor</th>
      <th>Student</th>
      <th>Year level</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pforms.each do |pform| %>
      <tr>
      	<% x = 1 %>
        <td><%= pform.fname %></td>
        <td><%= pform.mi %></td>
        <td><%= pform.lname %></td>
        <td><%= pform.coursemajor %></td>
        <td><%= pform.student_id %></td>
        <td><%= pform.year_level %></td>

      	<% pform.parent_infos.each do |p| %>
      		<td>parent <%= x %></td>
      		<% x = x + 1 %>
      	<% end %>
    <% end %>
      </tr>
  </tbody>
</table>

