<div class="container">
	<div class ="row">
		<div class ="welcome col">
			<span id="msg">Welcome to HelpMate!<br /><br /></span>
			<span id="motto">Guiding Students to Guidance</span>
			</div>
		</div>

	<div class="row">
		<div class="logo col">
			<%= image_tag "icon.png", :class => "log"  %>
			</div>
			</div>
	<div class="row">
	 <div class="login col-6 offset-3">

	 	<div class="form-group">
		  <div class="input-group">

<%= form_for(@users, :url => helpmate_path, :html => {:method => "post"}) do |f| %>
  <span class ="input-group-addon" id="basic-addon1">
  <%= f.label "Username:"%>
  </span>
  <div class="form-control" id="usr-name">
  <%= text_field_tag :username %>
  </div>
  </div>
  </div>
 
  	<div class="form-group">
	   <div class="input-group">
  <span class ="input-group-addon" id="basic-addon1">
  <%= f.label "Password:" %>
  <%= password_field_tag :password %>
  </div>
  	</div>
  <br>
  <div class="form-group">
  <%= f.submit "Login", :class => "button" %>
  </div>
  
<% end %>
<br>
<a href = "/helpmate/register" > Register </a>
</div>
</div>
</div>
</div>